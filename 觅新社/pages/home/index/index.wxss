/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header{
  width: 100%;
  height: 80rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.local{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  width: 130rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.search-box{
  width: 570rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 60rpx;
  font-size: 24rpx;
}
.search-box input{
  height: 60rpx;
  line-height: 60rpx;
  border: 0;
}
.arr-down{
  width: 17rpx;
  height: 10rpx;
}
.search-ico{
  width: 31rpx;
  height: 31rpx;
  margin-right:10rpx;

}
.tit-row{
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 0 20rpx;
}
.h1{
  font-size:32rpx;
  font-weight: bold;
  color: #323233; 
  height: 100rpx;
  line-height: 100rpx;
}
.h2{
  color: #646466;
  font-size: 26rpx;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align:middle;
}
.tit-row navigator{
  font-size: 26rpx;
  color: #646466;
}
.cal-row{
  /* width: 100%; */
  height: 106rpx;
  /* overflow-x: scroll; */
  /* overflow-y: hidden; */
  margin-bottom: 24rpx;
  width: 100%;
  white-space: nowrap;

}
.cal-row .li{
  width: 106rpx;
  height: 106rpx;
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.cal-row .cur{
  width: 104rpx;
  height: 104rpx;
  border: 2rpx solid #000;
  box-sizing: border-box;
  align-items: center;
}
.arr-right{
  width: 10rpx;
  height: 18rpx;
}
.arr-down{
  width: 17rpx;
  height: 10rpx;
}
.til-bg{
  width: 324rpx;
  height: 47rpx;
}
.pd-list{
  /* padding:0 20rpx;
  overflow-x:scroll; 
  overflow-y: hidden; */


  height:270rpx;
  width:100%;
  white-space:nowrap;

}
.pd-list .li{
  /* float: left; */
  display: inline-block;
  width: 180rpx;
  margin-right: 10rpx;
}
.pd-list .li image{
  width: 180rpx;
  height: 180rpx;
}
.pd-list .li view{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
}
.type-img1{
  width: 710rpx;
  height: 300rpx;
}
.til-txt{
  font-size: 30rpx;
  padding-left: 18rpx;
  border-left: 4rpx solid #000;
}
.type-block .h3{
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
}
.type-block .ul{
  overflow: hidden;
}
.type-block .ul .li{
  float: left;
  width: 340rpx;
  overflow: hidden;
}
.type-block .ul .li image{
  width: 340rpx;
  height: 220rpx;
}
.tab-nav{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.tab-nav .li{
  width:91rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 5rpx solid #fff;
  box-sizing: border-box;
  color: #969699;
  font-size: 30rpx;
  margin: 0 35rpx;
}
.tab-nav .cur{
  color: #323233;
  border-bottom: 5rpx solid #000;
}
.bs-list{
  padding:0 20rpx;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background: rgba(0,0,0,.5)
  }
  .getUserInfoBtn{
  /* width: 150rpx; */
  height: 75rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -37.5rpx 0 0 -75rpx;
