.search-row{
  height: 80rpx;
  padding-left: 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
}
.search-bg{
  width: 610rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 60rpx;

}
.search-ico{
  width: 31rpx;
  height: 31rpx;
  margin-right: 10rpx;
}
.search-bg input{
  font-size: 26rpx;
}
.cancel{
  width: 110rpx;
  font-size: 30rpx;
  color: #323233;
  text-align: center;
}
.local-row{
  background: #fff;
  height:80rpx;
  padding-left:20rpx;
}
.local-ico{
  width:20rpx;
  height: 30rpx;
  margin-right: 18rpx;
}
.now-local{
  font-size:26rpx;
  color:#323233;
}
.dt{
  height: 60rpx;
  color: #969699;
  padding-left: 20rpx;
  font-size:24rpx;
  line-height: 60rpx;
}
.li{
  padding-left:20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
  font-size:24rpx;
  color:#323233;
}
.index{
  position:fixed;
  right:20rpx;
  top: 50%;
  margin-top:-350rpx;
}
.index view{
  font-size: 20rpx;
  color: #646466;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
}
.body{
  height: 100%;
  position: absolute;
}
.search-box{
  position: fixed;
  width: 100%;
  height:100%;  
  /* height:calc(100vh-90rpx); */
  background: #fff;
  top: 90rpx;
  left: 0;
}