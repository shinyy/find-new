/* pages/my/collection/collection.wxss */
.bs-list{
  padding: 20rpx;
}
.bs-list .li{
  padding-bottom: 50rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}
.bs-list .li image{
  width: 710rpx;
  height: 300rpx;
  margin-bottom: 10rpx;
}
.bs-list .li .h3{
  font-size: 32rpx;
  /* font-weight: bold; */
  line-height: 44rpx;
  margin-bottom: 20rpx;
}
.bs-list .li .m{
  font-size:30rpx; 
}
.bs-list .li .m text{
  color: #e2320a;
}
.bs-list .li .mark{
  width: 110rpx;
  height: 34rpx;
  font-size: 26rpx;
  line-height: 34rpx;
  text-align: center;
  border: 1rpx solid #646466;
  color: #646466;
  margin-right:20rpx;
}
/* .bs-list .li .share-ico{
  width: 34rpx;
  height: 34rpx;
} */
.bs-list .li .like-ico{
  /* width: 32rpx;
  height: 27rpx; */
   width: 34rpx;
  height: 34rpx;
  margin-bottom: 0;
}
.bs-list .li .num{
  font-size:24rpx;
  color: #323233;
}
.use-btn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  border:2rpx solid #323233;
  line-height: 80rpx;
  box-sizing: border-box;
  color: #323233;
  font-size: 30rpx;
}
.use-btn.type2{
  width: 160rpx;
  height: 60rpx;
  line-height: 58rpx;
  margin-left: 30rpx;
}
.bs-list .li .text{
  width: 710rpx;
  height: 300rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  top: 0;
  left: 0;
  line-height: 40rpx;
}
.bs-list .li .text view{
  padding-left: 25rpx;
}