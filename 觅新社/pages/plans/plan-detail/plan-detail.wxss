/* pages/plans/plan-detail/plan-detail.wxss */
@import '../../../components/tab/tab.wxss'
.top-section{
  padding: 20rpx 20rpx 0 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.now-select{
  background: #f5f5f5;
  padding: 0 20rpx;
  padding-top: 20rpx;
  /* margin-bottom: 20rpx; */
  overflow: hidden;
}
.h3{
  font-size: 26rpx;
  color: #323233;
  height: 50rpx;
  line-height: 50rpx;
}
.li{
  padding: 30rpx 0;
  /* border-bottom: 1rpx solid #f5f5f5; */
}

.li image{
  width: 280rpx;
  height: 200rpx;
  /* margin-right: 20rpx; */
}
.li .h3{
  font-size: 32rpx;
  color:#323233;
  margin-bottom: 18rpx;
}
.li .m{
  font-size:26rpx; 
  padding-top:12rpx; 
}
.li .m text{
  color: #e2320a;
}
.li .mark{
  padding: 0 12rpx;
  height: 34rpx;
  font-size: 26rpx;
  line-height: 34rpx;
  text-align: center;
  border: 1rpx solid #646466;
  color: #646466;
  margin-right:20rpx;
}
.share-ico{
  width: 26rpx;
  height: 33rpx;
}
.like-ico{
  width: 32rpx;
  height: 27rpx;
}
.other-row .num{
  font-family: Arial, Helvetica, sans-serif;
  font-size:24rpx;
  color: #323233;
}
.other-row .time,.time{
  font-size: 26rpx;
  color: #323233;
}
.li .info{
  position: relative;
}
.other-row{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.li .like-ico{
  width: 34rpx;
  height: 34rpx;
  margin-bottom: 0;
}
.del-btn{
  width: 280rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #323233;
  text-align: center;
  border: 1rpx solid #323233;
  box-sizing: border-box;
  margin: 0 auto;
}
.section.type1{
  background: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
}
.other-select{
  background: #f5f5f5;
}
.o{
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.o .m{
  padding: 0;
}
.save{
  color: #323233;
  border: 2rpx solid #323233;
  font-size: 30rpx;
  text-align: center;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.other-row2{
  height: 120rpx;
}
.bottom-row{
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.bottom-row .btn{
  width: 400rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #323233;
  border: 2rpx solid #323233;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
  margin-right: 62rpx;
}
.bottom-row .btn.sp{
  color: #969699;
  border: 2rpx solid #969699;
}
.bottom-row image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 55rpx;
}
.bottom-block{
  background: #fff;
}
.top-row{
  padding: 20rpx 20rpx 0 20rpx;
}
.top-row .t{
  color: #323233;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.user-list {
  overflow: hidden;
  margin-bottom: 50rpx;
}
.user-list .list{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
  float: left;
  margin-right: -10rpx;
}
.user-list .list image{
  width: 50rpx;
  height: 50rpx;
}