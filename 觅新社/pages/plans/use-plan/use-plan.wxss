.btn-row{
  padding: 20rpx 30rpx 20rpx;
}
.use-btn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  border:2rpx solid #323233;
  line-height: 80rpx;
  box-sizing: border-box;
  color: #323233;
  font-size: 30rpx;
}
.tab-nav{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}
.tab-nav .li{
  /* width:91rpx; */
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 5rpx solid #fff;
  box-sizing: border-box;
  color: #969699;
  font-size: 30rpx;
  margin: 0 25rpx;
}
.tab-nav .cur{
  color: #323233;
  border-bottom: 5rpx solid #000;
}
